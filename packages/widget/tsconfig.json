{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": ["./**/*.test.*"]
}
