{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext",
    ],
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.ts",
  ]
}
